<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Witaj w Aplikacji 5 !"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvAplikacja"
        android:background="@android:color/holo_blue_light"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">


        <TextView
            android:text="Numer Telefonu :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNumerTelefonu"
            android:layout_marginTop="58dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:background="@android:color/holo_blue_bright"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:padding="5dp" />

        <TextView
            android:text="Telefon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNumerTelefonu"
            android:layout_alignParentStart="true"
            android:layout_marginTop="17dp"
            android:background="@android:color/holo_blue_bright"
            android:id="@+id/tvWyswietlaTelefon"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Kontakty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvKontakty"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_above="@+id/fabKontakty"
            android:layout_alignParentStart="true"
            android:layout_marginStart="137dp"
            android:layout_marginBottom="15dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/etTekstDoWyszukania"
            android:hint="Podaj tekst "
            android:textSize="18sp"
            android:layout_marginBottom="11dp"
            android:layout_above="@+id/bWyszukajTekst"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Szukaj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bWyszukajTekst"
            android:background="@android:color/holo_orange_dark"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_dialog_info"
            android:id="@+id/fabKontakty"
            android:layout_marginBottom="31dp"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/tvKontakty"
            android:layout_marginEnd="12dp"
            app:backgroundTint="@android:color/holo_blue_bright" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
